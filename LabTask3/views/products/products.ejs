
  <h1 style="color: white; margin-left: 480px; overflow: hidden; font-size: 60px">Shop</h1>
  <br><br>

  <div class="container">
    <div class="row" style="margin: 20px;">
      <% products.forEach((product,index) => { %>
        <div class="col-4">
          <div class="card" style="width: 18rem;">
            <img height="300px" src="<%= product.image %>" class="card-img-top" alt="Product Image">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= product.name %></li>
              <li class="list-group-item">Price: $<%= product.price %></li>
              <li class="list-group-item"><%= product.review %></li>
            </ul>
            <div class="card-body">
              <a class="btn btn-dark" href="/products/cart/<%= product._id %>">Add To Cart</a>
              <a class="btn btn-dark" href="/products/<%= product._id %>">Reviews</a>
              <a class="btn btn-dark" href="/products/edit/<%= product._id %>">Add Review</a>
              <a class="btn btn-dark" href="/products/delete/<%= product._id %>">Delete</a>
            </div>
          </div>
        </div>
        <% if ((index + 1) % 3 === 0) { %> <!-- Add a new row after every third product -->
        </div> <!-- Close the current row -->
        <div class="row" style="margin: 20px;"> <!-- Open a new row -->
      <% } %>
      <% }); %>
    </div>
  </div>




